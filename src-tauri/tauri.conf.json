{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Open 2E",
  "version": "0.1.0",
  "identifier": "com.open2e.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "index",
        "url": "windows/index.html",
        "transparent": false,
        "decorations": false,
        "resizable": false,
        "fullscreen": false,
        "width": 800,
        "height": 400,
        "alwaysOnTop": true,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src blob: data: filesystem: ws: wss: http: https: 'unsafe-eval' 'unsafe-inline'"
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:evaluator.db", "sqlite:learner.db"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources" : [
       "src/scripts/windows/install_ollama.ps1",
       "src/scripts/windows/download_ollama.ps1",
       "src/scripts/windows/pull_llm.ps1",
       "src/scripts/windows/clean_ollama.ps1"
    ]
  }
}
